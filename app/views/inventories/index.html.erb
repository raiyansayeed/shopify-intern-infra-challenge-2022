<p id="notice"><%= notice %></p>

<h1>Inventories</h1>

<%= link_to 'New Inventory', new_inventory_path %>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Amount</th>
      <th>Price</th>
      <th>Width</th>
      <th>Length</th>
      <th>Height</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.product_name %></td>
        <td><%= inventory.amount %></td>
        <td><%= number_to_currency(inventory.price) %></td>
        <td><%= inventory.width %> m</td>
        <td><%= inventory.length %> m</td>
        <td><%= inventory.height %> m</td>
        <td><%= link_to 'Show', inventory %></td>
        <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
        <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
